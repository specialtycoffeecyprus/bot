{
    "name": "specialtycoffeecyprus/specialty-bot",
    "description": "Telegram @SpecialtyCoffeeCyBot of Specialty Coffee in Cyprus website",
    "type": "project",
    "keywords": [
        "telegram",
        "bot",
        "specialty",
        "coffee",
        "coffeshop",
        "cyprus"
    ],
    "homepage": "https://t.me/SpecialtyCoffeeCyBot",
    "license": "MIT",
    "authors": [
        {
            "name": "Vladimir",
            "homepage": "https://t.me/vladimir_mvs",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "specialtycoffeecy@gmail.com",
        "issues": "https://github.com/specialtycoffeecyprus/specialty-bot/issues",
        "docs": "https://dev.to/vladimir_mvs/pragmatic-development-3-telegram-bot-ed1"
    },
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-phar": "*",
        "nutgram/nutgram": "*",
        "sentry/sdk": "*",
        "symfony/dotenv": "^6"
    },
    "require-dev": {
        "ext-intl": "*",
        "brianium/paratest": "*",
        "illuminate/testing": "*",
        "pestphp/pest": "*",
        "pestphp/pest-plugin-parallel": "*",
        "rector/rector": "*"
    },
    "replace": {
        "myclabs/deep-copy": "*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-intl-grapheme": "*",
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php80": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "apcu-autoloader": true,
        "classmap-authoritative": false,
        "discard-changes": true,
        "htaccess-protect": false,
        "notify-on-install": false,
        "optimize-autoloader": true,
        "platform-check": false,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
